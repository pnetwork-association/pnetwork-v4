{
    "compilerOptions": {
        "removeComments": true,
        "preserveConstEnums": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "lib": [
            "es6"
        ],
        "outDir": "dist",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
    },
    "include": [
        "./src"
    ]
}